        app:itemBackground="@drawable/drawer_item_background"
        app:headerLayout="@layout/nav_header_main_management"
        app:menu="@menu/activity_management_drawer"
        app:itemIconSize="@dimen/_18sdp"
        app:itemIconTint="@color/blueDark"
