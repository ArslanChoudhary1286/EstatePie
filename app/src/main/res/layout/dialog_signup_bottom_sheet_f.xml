<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_sheet_corners">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingBottom="@dimen/_52sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/line_shape" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sign_up"
            android:textColor="@color/blackBlue"
            android:textSize="@dimen/_22ssp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEmailSingUp"
            style="@style/AppSolidButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/email_id_or_username"
            android:textColor="@color/black"
            app:backgroundTint="@color/whiteDark"
            app:icon="@drawable/ic_email_icon"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/_12sdp"
            app:iconTint="@color/black"
            app:rippleColor="@color/blue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAppleSignUp"
            style="@style/AppSolidButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/continue_with_apple"
            android:textColor="@color/white"
            app:backgroundTint="@color/black"
            app:icon="@drawable/ic_apple"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/_12sdp"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFacebookSignUp"
            style="@style/AppSolidButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/continue_with_facebook"
            android:textColor="@color/white"
            app:backgroundTint="@color/blueFacebook"
            app:icon="@drawable/ic_facebook"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/_12sdp"
            app:iconTint="@android:color/transparent"
            app:iconTintMode="add" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogleSignUp"
            style="@style/AppSolidButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="@string/continue_with_google"
            android:textColor="@color/white"
            app:backgroundTint="@color/redGoogle"
            app:icon="@drawable/ic_google"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/_12sdp"
            app:iconTint="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>