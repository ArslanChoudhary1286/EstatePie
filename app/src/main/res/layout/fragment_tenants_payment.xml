<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_12sdp"
    tools:context=".ui.fragments.tenants.drawer.payment.TenantsPaymentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?actionBarItemBackground"
            android:contentDescription="@null"
            android:src="@drawable/ic_back_with_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/payment_management"
            android:textAlignment="center"
            android:textColor="@color/blackDark"
            android:textSize="@dimen/_24ssp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_payment_make"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/make_a_payment"
        android:textColor="@color/blueDark"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/roboto_regular"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_text_view"
        android:drawableEnd="@drawable/ic_next"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_payment_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_history"
        android:textColor="@color/blueDark"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/roboto_regular"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_text_view"
        android:drawableEnd="@drawable/ic_next"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_payment_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_schedule"
        android:textColor="@color/blueDark"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/roboto_regular"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_text_view"
        android:drawableEnd="@drawable/ic_next"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_payment_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_settings"
        android:textColor="@color/blueDark"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/roboto_regular"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_text_view"
        android:drawableEnd="@drawable/ic_next"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"/>



</LinearLayout>